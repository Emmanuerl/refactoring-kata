{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": ["typings/**/*.d.ts", "app/**/*"],
  "ts-node": {
    "files": true
  }
}